{
    "name": "ovillafuerte94/qvapay-php-library",
    "description": "This PHP library facilitates the integration of the Qvapay API",
    "keywords": [
        "php",
        "api",
        "payments",
        "qvapay"
    ],
    "homepage": "https://github.com/ovillafuerte94/qvapay-php-library",
    "license": "MIT",
    "authors": [
        {
            "name": "Omar Villafuerte",
            "email": "ovillafuerte.94@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Qvapay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qvapay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
